<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <script src="https://kit.fontawesome.com/3d818d0ed0.js" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers",root_path,class: "navbar-brand"%>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"  aria-controls="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto fa-ul">
                  <% if user_signed_in? %>
                    <%= link_to user_path(@current_user),class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-house-chimney fa-fw"></i>Home</li>
                    <% end %>
                    <%= link_to users_path,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-users fa-fw"></i>Users</li>
                    <% end %>
                    <%= link_to books_path,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-book-open fa-fw"></i>Books</li>
                    <% end %>
                    <%= link_to destroy_user_session_path,method: :delete,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-right-from-bracket fa-fw"></i>Log out</li>
                    <% end %>
                  <% else %>
                    <%= link_to root_path,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-house-chimney fa-fw"></i>Home</li>
                    <% end %>
                    <%= link_to about_path,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-link fa-fw"></i>About</li>
                    <% end %>
                    <%= link_to new_user_registration_path,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-user-plus fa-fw"></i>Sign up</li>
                    <% end %>
                    <%= link_to new_user_session_path,class: "nav-link text-light" do %>
                      <li><i class="fa-solid fa-right-to-bracket fa-fw"></i>Log in</li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
        </div>
      </nav>
    </header>
    <main>
      <%= render partial: 'layouts/flash_notice' %>
      <p class="notice"><% notice %></p>

      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>


  </body>
</html>
