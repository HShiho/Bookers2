<div class="container px-5 px-sm-0">
  <div class="row">
    <!--サイドバー-->
    <div class="col-md-3">

      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

      <%= render partial: 'layouts/sidebar/sidebar_mypage',locals: { user: @user } %>
      <%= render partial: 'layouts/sidebar/sidebar_new_book',locals: { book_new: @book_new } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <!--投稿ユーザー画像-->
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= link_to user_path(@book.user_id) do %>
                  <%= @book.user.name %>
                <% end %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
              <% if @book.user_id == current_user.id %>
                <td>
                  <%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { cofirm: '本当に消しますか?' }, class: "btn btn-sm btn-danger" %>
                  </td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>