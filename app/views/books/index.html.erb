

<div class="container px-5 px-sm-0">

  <%= render partial: 'layouts/error_message' %>

  <div class="row">
    <!--サイドバー-->
    <div class="col-md-3">
      <%= render partial: 'layouts/sidebar/sidebar_user_info',locals: { current_user: @current_user } %>
      <%= render partial: 'layouts/sidebar/sidebar_mypage',locals: { user: @user } %>
      <%= render partial: 'layouts/sidebar/sidebar_new_book',locals: { book_new: @book_new } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title,book_path(book.id)%>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
        </tbody>
          <% end %>
      </table>
    </div>

  </div>
</div>