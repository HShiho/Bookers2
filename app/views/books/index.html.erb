<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <!--投稿ユーザー画像-->
          <%= image_tag book.user.get_image %>
        </td>
        <td>
          <%= book.title %>
        </td>
        <td>
          <!--opinion-->
          <%= book.body %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>