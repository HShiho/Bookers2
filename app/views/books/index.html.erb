<p id ="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/sidebar',locals: { user: @user,book_new: @book_new } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <!--投稿ユーザー画像-->
                <%= image_tag book.user.get_image %>
              </td>
              <td>
                <%= link_to book.title,book_path(book.id),class: "text-dark"%>
              </td>
              <td>
                <p class="text-dark"><%= book.body %></p>
              </td>
            </tr>
        </tbody>
          <% end %>
        </table>
      </div>

  </div>
</div>