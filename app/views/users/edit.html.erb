<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

        <%= render partial: 'layouts/error_message' %>

        <%= form_with model: @user,method: :patch do |f| %>
          <div class="form-group">
            <label class="user_name">Name</label><br>
              <%= f.text_field :name,class: "form-control name" %>
          </div>
          <div class="form-group">
            <label class="user_profile_image">Image</label><br>
              <%= f.file_field :profile_image,class: "form-control-file user_profile_image",accept: "image/*" %>
          </div>
          <div class="form-group">
            <label class="user_introduction">Introduction</label><br>
              <%= f.text_area :introduction,class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User',class: "btn btn-secondary" %>
          </div>
       <% end %>

    </div>
  </div>
</div>

