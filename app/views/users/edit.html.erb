<h1>User info</h1>

<%= form_with model: @user do |f| %>
  <div>
    <label>Name</label><br>
      <%= f.text_field :name %>
  </div>
  <div>
    <label>Image</label><br>
      <%= f.file_field :image %>
      <!--bootstrap導入後=>f.file_field_without_bootstrap :imageに変更-->
  </div>
  <div>
    <label>Introduction</label><br>
      <%= f.text_area :introduction %>
  </div>
  <%= f.submit 'Update User' %>
<% end %>