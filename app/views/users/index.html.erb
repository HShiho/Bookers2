<div class="container px-5 px-sm-0">

  <%= render partial: 'layouts/error_message' %>

  <div class="row">
    <!--サイドバー-->
    <div class="col-md-3">
      <%= render partial: 'layouts/sidebar/sidebar_user_info',locals: { current_user: @current_user } %>
      <%= render partial: 'layouts/sidebar/sidebar_mypage',locals: { user: @user } %>
      <%= render partial: 'layouts/sidebar/sidebar_new_book',locals: { book_new: @book_new } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(80,80),class: "text-dark"; %>
              </td>
              <td>
                <p class="text-dark"><%= user.name %></p>
              </td>
              <td>
                <%= link_to "Show",user_path(user.id) %>
              </td>
            </tr>
        </tbody>
          <% end %>
      </table>
    </div>

  </div>
</div>
