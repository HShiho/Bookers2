<div class="container px-5 px-sm-0">
  <div class="row">
    <!--サイドバー-->
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
      <%= render partial: 'layouts/sidebar/sidebar_mypage',locals: { current_user: @current_user } %>
      <%= render partial: 'layouts/sidebar/sidebar_new_book',locals: { book_new: @book_new } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %>
              </td>
              <td>
                <%= link_to book.title ,book_path(book.id) %>
              </td>
              <td>
               <%= book.body %>
              </td>
              
            </tr>
        </tbody>
          <% end %>
      </table>
    </div>

  </div>
</div>