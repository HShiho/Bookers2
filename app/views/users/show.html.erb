<p id ="notice">notice</p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/sidebar',locals: { user: @user,book_new: @book_new } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag @user.get_image,class: "text-dark"; %>
              </td>
              <td>
                <%= link_to book.title,class: "text-dark" %>
              </td>
              <td>
                <p class="text-dark"><%= book.body %></p>
              </td>
              <% if @book.user_id == current_user %>
                <td>
                  <%= link_to 'Edit',edit_book_path(book.id) %>
                </td>
                <td>
                  <%= link_to 'Destroy',book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
                  </td>
              <% end %>
            </tr>
        </tbody>
          <% end %>
      </table>
    </div>

  </div>
</div>